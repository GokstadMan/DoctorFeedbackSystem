generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Doctor{
  id          Int      @id @default(autoincrement())
  firstname   String
  lastname      String
  city        String
  description String
  reviews     Review[]
}

model Review{
  id          Int      @id @default(autoincrement())
  doctorId    Int
  name        String
  text        String
  doctor      Doctor   @relation(fields:[doctorId], references: [id])
}
